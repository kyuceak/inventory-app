<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Category</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <%- include("partials/nav.ejs") %><%- include("partials/errors.ejs") %>
    <div class="form-container">
      <h1>Add Category</h1>
      <form action="/categories/new" method="POST" enctype="multipart/form-data" class="form-style">
      
        <div class="input-box">
          <label for="category">Category Name:</label>
          <input type="text" name="category" , id="category" />
        </div>

        <div class="input-box">
          <label for="desc">Description:</label>
          <textarea name="desc" id="desc"></textarea>
        </div>
  
        <div class="input-box">
          <label for="file">Category Image:</label>
          <input type="file" name="category_file" id="file" >
        </div>
        <div class="form-sub">
          <button id="submit-cat">Submit</button>
        </div>
       
      </form>

    </div>
  
  </body>
</html>
